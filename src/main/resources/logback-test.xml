<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration debug="true">
	<contextName>gateway</contextName>

	<property name="log.path" value="log/test/gateway.log" />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>info</level>
		</filter>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="file"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.path}</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.path}.%d{yyyy-MM-dd}.zip</fileNamePattern>
		</rollingPolicy>

		<encoder>
			<pattern>%date %level [%thread] %logger{36} [%file : %line] %msg%n
			</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>
	<logger name="org.springframework.scheduling" level="info" />
	<logger name="com.hncy58" level="info" />
	<Logger name="org.apache.catalina.util.LifecycleBase" level="info" />
	<Logger name="org.apache.coyote.http11.Http11NioProtocol" level="info" />
	<Logger name="org.apache.tomcat.util.net.NioSelectorPool" level="info" />
	<Logger name="org.springframework" level="info" />
	<logger name="org.mybatis" level="info" />
	<logger name="java.sql" level="info" />
	<logger name="java.sql.Connection" level="info" />
	<logger name="java.sql.Statement" level="info" />
	<logger name="java.sql.PreparedStatement" level="info" />
	<logger name="java.sql.ResultSet" level="info" />
</configuration>